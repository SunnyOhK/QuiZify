<!-- CONTAINER FOR GAME SCORE AND LIST OF SONGS PLAYED -->
<div class="container" style="margin-top: 80px;">
  <table class="table" id="results-table">
    <tbody>
      {{#each songs as |song|}}
      <tr id="song-results">
        <th scope="col" id="add-song" style="width: 20%">➕</th>
        <td scope="col" style="width: 60%">{{this.title}} by {{this.artistName}}</td>
        <td scope="col" class="play-icon" id="play-song" style="width: 20%">▶︎</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Play Again Button -->
  <form action="/play-again" method="POST" style="width: 100vw; justify-content: center; display: flex; align-items: center;">
    <button class="btn btn-secondary" id="p-ag-btn" type="submit" style="width: 350px; height: 75px;">Play Again</button>
  </form>
